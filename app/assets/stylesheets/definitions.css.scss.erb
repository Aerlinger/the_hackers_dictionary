@import "all_pages.css.scss.erb";


.definition {
    border-top: 1px dotted lightgray;
    padding-bottom: 2px;
    padding-left: 7px;

    &:hover {
        background-color: $lightBackgroundColor;
    }

    .edit-delete {
        margin: 0 6px;
    }
}

.category {
    margin-left: 5em;
    color: black;
    font-style: italic;
    a {
        background-color: $lightBackgroundColor;
        border: 2px solid $lightBackgroundColor;
        margin-right: 2px;

        &:hover {
            background-color: $lightBackgroundColor;
            text-decoration: none;
        }
    }
}

small.author {
    margin-left: 1em;
    color: #7e7e7e;
    font-style: italic;
}