<div id="tag_cloud">
  <%= tag_cloud Article.tag_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class%>
  <% end %>
</div>

<h2>Listing definitions<%= " starting with '#{params[:letter]}'" if params[:letter] %></h2>

<% @definitions.each do |definition| %>
  <%= render partial: "definition_preview", locals: {definition: definition} %>
<% end %>

<%= link_to 'New Definition', new_definition_path %>
